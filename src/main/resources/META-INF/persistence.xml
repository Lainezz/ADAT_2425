<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="unidadMySQL" transaction-type="RESOURCE_LOCAL">
        <class>com.es.tema2.orm.hibernateProducto.Usuario</class>
        <class>com.es.tema2.orm.hibernateProducto.Proveedor</class>
        <class>com.es.tema2.orm.hibernateProducto.Producto</class>

        <properties>
            <!-- Driver -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <!-- URL -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pruebaadat" />

            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>
    <persistence-unit name="unidadInstituto" transaction-type="RESOURCE_LOCAL">
        <class>com.es.tema2.orm.hibernateInstituto.model.Departamento</class>
        <class>com.es.tema2.orm.hibernateInstituto.model.Director</class>
        <class>com.es.tema2.orm.hibernateInstituto.model.Instituto</class>
        <class>com.es.tema2.orm.hibernateInstituto.model.Inspector</class>
        <class>com.es.tema2.orm.hibernateInstituto.model.Proveedor</class>

        <properties>
            <!-- Driver -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <!-- URL -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/institutobd" />

            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>

</persistence>